{
  "extends": "../shared/tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "declaration": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "cdk.out", "dist"]
}
